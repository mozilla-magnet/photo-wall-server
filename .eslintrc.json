{
  "extends": [
    "eslint:recommended"
  ],

  "parserOptions": {
    "sourceType": "module"
  },

  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },

  "rules": {
    "curly": 1,
    "eol-last": 1,
    "eqeqeq": 2,
    "indent": [2, 2],
    "no-console": 0,
    "no-throw-literal": 2,
    "no-unused-vars": [2, {"vars": "all", "args": "none"}],
    "no-var": 1,
    "prefer-const": 1,
    "prefer-template": 1,
    "quotes": [2, "single"],
    "radix": 1,
    "semi": 1
  }
}

